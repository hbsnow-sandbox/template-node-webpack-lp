{
  "name": "lp-template",
  "version": "1.0.0",
  "repository": "https://github.com/hbsnow/lp-template.git",
  "author": "hbsnow <yuki.4uing@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "run-p clean",
    "build": "run-p build:*",
    "build:html": "pug src -o dist",
    "build:webpack": "webpack --config webpack.prod.js",
    "build:img": "cpx 'src/assets/img/**/*' ./dist/assets/img",
    "predev": "run-p clean",
    "dev": "run-p dev:* serve",
    "dev:html": "pug src -o dist -w",
    "dev:webpack": "webpack --watch --config webpack.dev.js",
    "dev:img": "cpx 'src/assets/img/**/*' ./dist/assets/img -w",
    "lint": "eslint '**/*.js' && stylelint '**/*.scss' && prettier --check '**/*.{js,scss}'",
    "lintfix": "eslint --fix '**/*.js' && stylelint --fix '**/*.scss'",
    "serve": "browser-sync dist -w",
    "clean": "rimraf dist .cache"
  },
  "engines": {
    "node": ">=12"
  },
  "hooks": {
    "pre-commit": "npm run lintfix"
  },
  "devDependencies": {
    "@babel/core": "7.8.6",
    "@babel/preset-env": "7.8.6",
    "babel-loader": "8.0.6",
    "browser-sync": "2.26.7",
    "cpx": "1.5.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "pug-cli": "github:pugjs/pug-cli#master",
    "rimraf": "3.0.2",
    "sass": "1.26.1",
    "stylelint": "13.2.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11",
    "webpack-merge": "4.2.2"
  },
  "dependencies": {
    "core-js": "3.6.4"
  }
}
