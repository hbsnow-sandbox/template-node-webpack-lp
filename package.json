{
  "name": "template-node-webpack-lp",
  "version": "1.0.0",
  "repository": "https://github.com/hbsnow/template-node-webpack-lp.git",
  "author": "hbsnow <yuki.4uing@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "run-p clean lintfix",
    "build": "run-p build:*",
    "build:webpack": "webpack --config webpack.prod.js",
    "build:img": "cpx 'src/assets/img/**/*' dist/assets/img",
    "predev": "run-p clean lintfix",
    "dev": "run-p dev:* serve",
    "dev:webpack": "webpack --watch --config webpack.dev.js",
    "dev:img": "cpx 'src/assets/img/**/*' ./dist/assets/img -w",
    "lint": "eslint '.*.js' 'src/**/*.js' && stylelint '**/*.scss' && secretlint '**/*'",
    "lintfix": "eslint --fix '.*.js' 'src/**/*.js' && stylelint --fix '**/*.scss' && secretlint '**/*'",
    "serve": "browser-sync dist -w",
    "clean": "rimraf dist && mkdir dist"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{scss,css}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/preset-env": "7.12.1",
    "@secretlint/secretlint-rule-preset-recommend": "2.1.0",
    "autoprefixer": "10.0.1",
    "babel-loader": "8.1.0",
    "browser-sync": "2.26.13",
    "core-js": "3.6.5",
    "cpx": "1.5.0",
    "css-loader": "5.0.0",
    "cssnano": "4.1.10",
    "eslint": "7.11.0",
    "eslint-config-prettier": "6.13.0",
    "eslint-plugin-prettier": "3.1.4",
    "globule": "1.3.2",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.0",
    "mini-css-extract-plugin": "1.0.0",
    "npm-run-all": "4.1.5",
    "postcss-import": "13.0.0",
    "postcss-loader": "4.0.4",
    "postcss-scss": "3.0.2",
    "prettier": "2.1.2",
    "pug": "3.0.0",
    "pug-loader": "2.4.0",
    "regenerator-runtime": "0.13.7",
    "rimraf": "3.0.2",
    "sass": "1.27.0",
    "sass-loader": "10.0.3",
    "secretlint": "2.1.0",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-prettier": "1.1.2",
    "webpack": "4.44.2",
    "webpack-cli": "4.0.0",
    "webpack-fix-style-only-entries": "0.6.0",
    "webpack-merge": "5.2.0"
  },
  "dependencies": {
    "normalize.css": "8.0.1"
  }
}
